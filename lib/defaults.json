{
    "states": [
        "RUNNING",
        "FROZEN",
        "STOPPED"
    ],

    "commands": {
        "create": "lxc-create",
        "start": "lxc-start",
        "freeze": "lxc-freeze",
        "unfreeze": "lxc-unfreeze",
        "halt": "lxc-halt",
        "shutdown": "lxc-shutdown",
        "destroy": "lxc-destroy",
        "startEphemeral": "lxc-start-ephemeral",
        "execute": "lxc-execute"
    },

    "paths": {
        "base": "/var/lib/lxc/",
        "rootfs": "rootfs",
        "config": "config",
        "fstab": "fstab"
    },

    "argumentMappings": {
        "base": {
            "name": "-n"
        },
        "create": {
            "template": "-t"
        },
        "start": {
            "daemon": "-d"
        },
        "execute": {
            "command": "--"
        }
    },

    "defaultArguments": {
        "start": {
            "daemon": true
        },
        "create": {
            "template": "ubuntu-cloud"
        }
    },

    "argumentOrder": {
        "execute": ["name", "command"]
    }
}