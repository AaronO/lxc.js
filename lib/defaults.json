{
    "states": [
        "RUNNING",
        "FROZEN",
        "STOPPED"
    ],

    "commands": {
        "create": "lxc-create",
        "start": "lxc-start",
        "freeze": "lxc-freeze",
        "unfreeze": "lxc-unfreeze",
        "halt": "lxc-halt",
        "shutdown": "lxc-shutdown",
        "destroy": "lxc-destroy",
        "startEphemeral": "lxc-start-ephemeral",
        "execute": "lxc-execute",
        "netstat": "lxc-netstat",
        "ps": "lxc-ps",

        "monitor": "lxc-monitor"
    },

    "paths": {
        "base": "/var/lib/lxc/",
        "rootfs": "rootfs",
        "config": "config",
        "fstab": "fstab"
    },

    "args": {
        "mappings": {
            "base": {
                "name": "-n"
            },
            "create": {
                "template": "-t"
            },
            "start": {
                "daemon": "-d"
            },
            "execute": {
                "command": "--"
            },
            "startEphemeral": {
                "origin": "-o",
                "bind": "-b"
            },
            "destroy": {
                "force": "-f"
            },
            "shutdown": {
                "wait": "-w",
                "reboot": "-r",
                "timeout": "-t"
            }
        },

        "defaults": {
            "start": {
                "daemon": true
            },
            "create": {
                "template": "ubuntu-cloud"
            },
            "destroy": {
                "force": true
            },
            "shutdown": {
                "timeout": "now"
            }
        },

        "order": {
            "start": ["name", "command"],
            "startEphemeral": ["name", "command"],
            "execute": ["name", "command"]
        }
    },

    "limits": {
        "mappings": {
            "memory": "lxc.cgroup.memory.limit_in_bytes",
            "swap": "lxc.cgroup.memory.memsw.limit_in_bytes"
        }
    }
}