{
    "states": [
        "RUNNING",
        "FROZEN",
        "STOPPED"
    ],

    "commands": {
        "create": "lxc-create",
        "start": "lxc-start",
        "freeze": "lxc-freeze",
        "unfreeze": "lxc-unfreeze",
        "halt": "lxc-halt",
        "shutdown": "lxc-shutdown",
        "destroy": "lxc-destroy",
        "startEphemeral": "lxc-start-ephemeral",
        "execute": "lxc-execute",
        "netstat": "lxc-netstat",
        "ps": "lxc-ps",

        "monitor": "lxc-monitor"
    },

    "paths": {
        "base": "/var/lib/lxc/",
        "rootfs": "rootfs",
        "config": "config",
        "fstab": "fstab"
    },

    "args": {
        "mappings": {
            "base": {
                "name": "-n"
            },
            "create": {
                "template": "-t"
            },
            "start": {
                "daemon": "-d"
            },
            "execute": {
                "command": "--"
            }
        },

        "defaults": {
            "start": {
                "daemon": true
            },
            "create": {
                "template": "ubuntu-cloud"
            }
        },

        "order": {
            "execute": ["name", "command"]
        }
    }
}